.drag-and-drop-zone {
    height: 100px;
    border-color: white;
    border-width: 2px;
    border-radius: 10px 10px 10px 10px;
}

.preview {
    height: 100%;
    background-color: black;
}

.drag-neutral {
    background-color: rgb(35, 35, 35);
}

.drag-valid {
    background-color: rgb(17, 98, 19)
}

.drag-error {
    background-color: rgb(126, 10, 10)
}

.animations-list {
    height: 200px;
}

.move-btn{
    height : 50px;
}

.apply-button {
    height: 40px;
}
